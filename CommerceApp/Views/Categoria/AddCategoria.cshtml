@model AllLayoutModel
@{
    ViewData["Title"] = "AddCategoria";
    Layout = Model.Layout;
}



<section class="bg0 p-t-23 p-b-140">
    <div class="container">
        <hr />
        <form asp-controller="Categoria" asp-action="AddCategoria" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label"> İsim</label>
                        <input id="productName" class="form-control" type="text" asp-for="category.name" required />
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="form-control-3">Üst Kategoriler</label>
                        @Html.DropDownListFor(x=>x.category.id,(List<SelectListItem>)ViewBag.categoriesList,"Seç",new{@class="form-control"})
                    </div>
                    <div class="form-group row">
                        <div class="col-md-10 offset-md-2">
                            <button type="submit" id="btn1" class=" center-block btn btn-primary">Ekle</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

