@model AllLayoutModel
@{
    ViewData["Title"] = "GetList";
    Layout = Model.Layout;
}


<section class="bg0 p-t-23 p-b-140">
    <div class="container">
       
        <hr />
         <div class="col-lg-6 col-md-6">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col"></th>
                            <th scope="col">Resim</th>
                            <th scope="col">Ürün</th>
                            <th scope="col">Fiyat</th>
                            <th scope="col">İndirim</th>
                            <th scope="col">Açıklama</th>
                            <th scope="col">Model Kodu</th>
                            <th scope="col">Marka</th>
                            <th scope="col">Kategori</th>
                        @*    <th scope="col">Resimler</th>*@
                            <th scope="col">Attirbuteler</th>
                           @* <th scope="col">Güncelle</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Products)
                        {
                            <tr>
                                <th scope="row"></th>
                                <td><img src="~/images/@item.imageUrl" width="80" /></td>
                                <td>@item.name</td>
                               
                                <td>@item.price</td>
                                @if (item.reducedprice ==0)
                                {
                                    <td>Değer Yok</td>
                                }
                                else
                                {
                                    <td>@item.reducedprice</td>
                                }
                                <td>@item.descriptions</td>
                                <td>@item.modelcode</td>
                                <td>@Functions.parentidcategoryname(item.categoryid)</td>
                           @*     @if (GetImagewithProductid.GetImage(@item.ProductID) == true)*@
                              @*  {
                                    <td> <a href="/MultipleImages/ProductImages/@item.ProductID" class="btn btn-secondary">Resimler</a></td>
                                }
                                else
                                {
                                    <td> <a href="/MultipleImages/CreateImages/@item.ProductID" class="btn btn-success btn-sm">Ekle</a></td>
                                }*@
                                <td>
                                    <a href="/Varyant/ProductByWithListAttirbute/@item.id" class="btn btn-success">Attirbute</a>
                                </td>
                              @*  <td><a href="/Admin/Update/@item.id" class="btn btn-warning">Güncelle</a></td>*@

                               @* <td>
                                    <form action="/Admin/Delete/" method="post" style="display:inline">
                                        <input type="hidden" name="productid" value="@item.ProductID" />
                                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                    </form>
                                </td>*@
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
    </div>

</section>



